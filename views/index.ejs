<html>
<head>
  <title>Boosting Application</title>
  <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.3.2/angular-ui-router.js"></script>
  <script src="/javascripts/angularApp.js"></script>
  <style> .glyphicon-thumbs-up { cursor:pointer } </style>
</head>
<body ng-app="boosting-application" ng-controller="MainCtrl">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <ui-view></ui-view>
    </div>
    </div>

  <script type="text/ng-template" id="/home.html">
    <div class="page-header">
      <h1>Boosting Application</h1>
    </div>

    <div ng-repeat="boost in boosts">
          <span style="font-size:20px; margin-left:10px;">
                {{boost.name}} on {{boost.date}}

            </span>
      <span>
  <a href="#/boosts/{{$index}}">Buyers</a>
</span>
    </div>

    <form ng-submit="addBoost()"
          style="margin-top:30px;">
      <h3>Add a new boost</h3>

      <div class="form-group">
        <input type="text"
               class="form-control"
               placeholder="Title"
               ng-model="name"/>
      </div>
      <div class="form-group">
        <input type="date"
               class="form-control"
               ng-model="date"/>
      </div>
      <button type="submit" class="btn btn-primary">Add new boost</button>
    </form>
  </script>

  <script type="text/ng-template" id="/boosts.html">
    <div class="page-header">
      <h3>
        {{boost.name}} - {{boost.date}}
      </h3>
    </div>

    <div ng-repeat="buyer in boost.buyers">
      {{buyer.name}} ({{buyer.battletag}})
      <span style="font-size:20px; margin-left:10px;">
      {{buyer.price}} for {{buyer.what}}
    </span>
      - by {{buyer.author}}
    </div>
    <form ng-submit="addBuyer()"
          style="margin-top:30px;">
      <h3>Add a new buyer</h3>

      <div class="form-group">
        <input type="text"
               class="form-control"
               placeholder="name"
               ng-model="name"/>
      </div>
      <div class="form-group">
        <input type="text"
               class="form-control"
               placeholder="battletag"
               ng-model="battletag"/>
      </div>
      <div class="form-group">
        <input type="number"
               class="form-control"
               placeholder="price"
               ng-model="price"/>
      </div>
      <div class="form-group">
        <input type="text"
               class="form-control"
               placeholder="what"
               ng-model="what"/>
      </div>
      <button type="submit" class="btn btn-primary">Add new buyer</button>
    </form>
  </script>

</body>
</html>