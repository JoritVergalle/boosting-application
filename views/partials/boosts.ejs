<div class="page-header">
    <h1>
        {{boost.name}} - {{boost.date | date:'d/MM/yyyy'}}
        <span style="float: right;">{{totalGold}}g</span>
    </h1>
</div>

<div ng-show="showTableHideForm">
    <table class="table" >
        <thead>
        <th>Character name</th>
        <th>Battlenet tag</th>
        <th>Run</th>
        <th>Finder</th>
        <th>Price</th>
        </thead>
        <tr ng-repeat="buyer in boost.buyers">
            <td>{{buyer.characterName}}</td>
            <td>{{buyer.battletag}}</td>
            <td>{{buyer.what}}</td>
            <td>{{buyer.finder}}</td>
            <td>{{buyer.price}}g</td>
        </tr>
    </table>
    <div ng-show="isLoggedIn()">
        <button type="button" class="btn btn-success" ng-click="changeShowTableHideForm()">Add a new buyer</button>
    </div>
</div>



<div ng-hide="isLoggedIn()">
    <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a buyer.</h3>
</div>

<form ng-submit="addBuyer()"
      ng-show="isLoggedIn()"
      ng-hide="showTableHideForm"
      style="margin-top:30px;">
    <h3>Add a new buyer</h3>

    <div class="form-group">
        <label>Character name</label>
        <input type="text"
               class="form-control"
               ng-model="characterName"/>
        <label>Battlenet tag</label>
        <input type="text"
               class="form-control"
               ng-model="battletag"/>
        <label>Price</label>
        <input type="number"
               class="form-control"
               ng-model="price"/>
        <label>Run</label>
        <label name="what" for="what">Which boost</label>
        <select class="form-control" required ng-model="what">
            <option>Full</option>
            <option>Last boss</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Add new buyer</button>
    <button type="button" class="btn btn-danger" ng-click="changeShowTableHideForm()">Cancel</button>
</form>