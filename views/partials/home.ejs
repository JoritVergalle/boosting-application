<div class="page-header">
    <h1>Boosting Application</h1>
</div>

<table class="table">
    <thead>
        <th>Boost</th>
        <th>Date</th>
    </thead>
    <tr ng-repeat="boost in boosts">
        <td>{{boost.name}}</td>
        <td>{{boost.date | date:'dd/MM/yyyy'}}</td>
        <td>
            <a class="glyphicon glyphicon-th-list" href="#/boosts/{{boost._id}}"></a>
        </td>
    </tr>
</table>

<div ng-hide="isLoggedIn()">
    <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a boostrun.</h3>
</div>

<form ng-submit="addBoost()"
      ng-show="isLoggedIn()"
      style="margin-top:30px;">
    <h3>Add a new boost</h3>

    <div class="form-group">
        <input type="text"
               class="form-control"
               placeholder="Title"
               ng-model="name"/>
    </div>
    <div class="form-group">
        <input type="date"
               class="form-control"
               ng-model="date"/>
    </div>
    <button type="submit" class="btn btn-primary">Add new boost</button>
</form>