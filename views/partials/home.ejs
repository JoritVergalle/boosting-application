<div class="page-header">
    <h1>Boosting Application</h1>
</div>

<div ng-repeat="boost in boosts">
    <span style="font-size:20px; margin-left:10px;">
        {{boost.name}} on {{boost.date | date:'d/MM/yyyy'}}
    </span>
    <span>
        <a href="#/boosts/{{boost._id}}">Buyers</a>
    </span>
</div>

<form ng-submit="addBoost()"
      style="margin-top:30px;">
    <h3>Add a new boost</h3>

    <div class="form-group">
        <input type="text"
               class="form-control"
               placeholder="Title"
               ng-model="name"/>
    </div>
    <div class="form-group">
        <input type="date"
               class="form-control"
               ng-model="date"/>
    </div>
    <button type="submit" class="btn btn-primary">Add new boost</button>
</form>